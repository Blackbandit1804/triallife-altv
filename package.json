{
    "name": "triallife",
    "version": "1.0.0",
    "description": "a german hardcore roleplay system",
    "author": "DeathNeroTV",
    "type": "module",
    "scripts": {
        "build": "node ./utility/copy-helper.js",
        "core-reload": "node ./utility/manager.js",
        "clean": "node ./utility/cleaner.js",
        "update": "altv-pkg d release && git pull origin master && npm install && git submodule update --force --init --recursive --remote",
        "windows": "npm run build && altv-server.exe",
        "linux": "npm run build && ./start.sh",
        "build-watching": "node ./utility/copy-helper.js -- WATCHING",
        "watch-windows": "tsc-watch --onSuccess \"npm run watch-handle-windows\"",
        "watch-linux": "tsc-watch --onSuccess \"npm run watch-handle-linux\"",
        "watch-handle-windows": "npm run build-watching && npm run core-reload",
        "watch-handle-linux": "npm run build-watching && npm run core-reload"
    },
    "devDependencies": {
        "@altv/types-client": "^1.6.1",
        "@altv/types-natives": "^1.3.0",
        "@altv/types-server": "^1.8.1",
        "@altv/types-webview": "^1.0.2",
        "@types/axios": "^0.14.0",
        "@types/express": "^4.17.12",
        "@types/mongodb": "^3.6.17",
        "@types/node": "^15.12.2",
        "fs-extra": "^10.0.0",
        "glob": "^7.1.7",
        "ora": "^5.4.1",
        "promisify-child-process": "^4.1.1",
        "rimraf": "^3.0.2",
        "tsc-watch": "^4.4.0",
        "typescript": "latest"
    },
    "dependencies": {
        "@assemblyscript/loader": "^0.19.2",
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.1",
        "cors": "^2.8.5",
        "discord.js": "^12.5.3",
        "dotenv": "^10.0.0",
        "elliptic": "^6.5.4",
        "express": "^4.17.1",
        "simplymongo": "^2.1.1",
        "sjcl": "^1.0.8"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 180,
        "singleQuote": true,
        "semi": true,
        "arrowParens": "always",
        "trailingComma": "none"
    }
}
